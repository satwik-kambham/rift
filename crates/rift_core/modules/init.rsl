fn fileExplorerEntryDisplay(entry) {
    name = tableGet(entry, "name")
    if tableGet(entry, "is_dir") {
        return name + "/"
    }
    return name
}

fn renderFileExplorer() {
    content = "ðŸ“‚ File Explorer\n" + fileExplorerCurrentDir + "\n(ctrl-f: new file, ctrl-d: new folder)\nâ•­â”€ Filter â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n" + fileExplorerInput + "\nâ•°â”€ Entries â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"

    if fileExplorerError != "" {
        content = content + "\n   Error: " + fileExplorerError
    }

    total = arrayLen(fileExplorerEntries)
    if total == 0 {
        content = content + "\n   No entries"
        setViewportBufferContent(fileExplorerId, content)
        return null
    }

    window = viewportWindow(fileExplorerSelectedEntry, total, 6)
    start = tableGet(window, "start")
    end = tableGet(window, "end")

    if start > 0 { content = content + "\n   â‹¯" }

    i = start
    loop {
        if i >= end { break }
        entry = arrayGet(fileExplorerEntries, i)
        display = fileExplorerEntryDisplay(entry)
        prefix = "â€¢"
        if fileExplorerSelectedEntry == i { prefix = "âž¤" }
        content = content + "\n " + prefix + " " + display
        i = i + 1
    }

    if end < total { content = content + "\n   â‹¯" }

    setViewportBufferContent(fileExplorerId, content)
}

fn fileExplorerApplyFilter() {
    query = stringToLower(fileExplorerInput)
    fileExplorerEntries = createArray()

    i = 0
    loop {
        if i >= arrayLen(fileExplorerAllEntries) { break }
        entry = arrayGet(fileExplorerAllEntries, i)
        name = stringToLower(tableGet(entry, "name"))

        if stringLen(query) == 0 or stringContains(name, query) {
            arrayPushBack(fileExplorerEntries, entry)
        }

        i = i + 1
    }

    if arrayLen(fileExplorerEntries) == 0 {
        fileExplorerSelectedEntry = 0
    }
    if fileExplorerSelectedEntry >= arrayLen(fileExplorerEntries) {
        fileExplorerSelectedEntry = 0
    }

    renderFileExplorer()
}

fn fileExplorerRefreshEntries() {
    listing = listDir(fileExplorerCurrentDir)
    fileExplorerAllEntries = createArray()
    fileExplorerError = ""

    errorMessage = tableGet(listing, "error")
    if errorMessage != null {
        fileExplorerError = errorMessage
    }

    entries = tableGet(listing, "entries")

    parentEntry = createTable()
