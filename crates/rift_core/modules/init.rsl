fileExplorerId = -1
fileExplorerInput = ""
fileExplorerEntries = createArray()
fileExplorerAllEntries = createArray()
fileExplorerSelectedEntry = 0
fileExplorerCurrentDir = ""
fileExplorerPreviousBufferId = -1
